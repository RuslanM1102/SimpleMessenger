<Window x:Class="Messenger.MessengerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" Loaded="Window_Loaded">

    <Grid Background="Bisque">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="Chat" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="MessageInput" Grid.Row="3" Grid.Column="1"/>
        <Button x:Name="SendMessageButton" Grid.Row="3" Grid.Column="2" Click="SendMessageButton_Click" Content="Отправить"/>
    </Grid>
</Window>
